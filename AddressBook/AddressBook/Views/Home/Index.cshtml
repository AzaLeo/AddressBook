@model IEnumerable<AddressBook.Models.Contacts>

@{
    ViewBag.Title = "Главная страница";
}

<h2>Список контактов</h2>

<p>
    @Html.ActionLink("Создать", "Create")
</p>
<table>
    <tr>
        <th>
            ФИО
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a href="~/Views/Home/Index" class="Detail">@Html.DisplayFor(modelItem => item.LastName) @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.MiddleName)</a>
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ContactsId })
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.ContactsId })
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.ContactsId })
            </td>
        </tr>
    }

</table>
