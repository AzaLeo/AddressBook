@model AddressBook.Models.RegisterExternalLoginModel
@{
    ViewBag.Title = @Resources.Views.Register;
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>@Resources.Views.BindingAccount @ViewBag.ProviderDisplayName.</h2>
</hgroup>

@using (Html.BeginForm("ExternalLoginConfirmation", "Account", new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>@Resources.Views.FormBinding</legend>
        <p>
            @Resources.Views.HaveTestedThrough <strong>@ViewBag.ProviderDisplayName</strong>.
            @Resources.Views.EnterNameConfirm
        </p>
        <ol>
            <li class="name">
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </li>
        </ol>
        @Html.HiddenFor(m => m.ExternalLoginData)
        <input type="submit" value="@Resources.Views.Register" />
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
